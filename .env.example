# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME=Knowledge Graph Platform

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DATABASE=knowledge_graph

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=change-this-to-a-very-long-random-secret-key-in-production
JWT_REFRESH_SECRET=change-this-to-another-very-long-random-secret-key
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OAuth - Google
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Encryption (for storing OAuth tokens)
ENCRYPTION_KEY=your-32-byte-encryption-key-here-exactly-32-chars

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100